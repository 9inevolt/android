<?xml version='1.0' encoding='utf-8'?>
<manifest android:versionCode="4" android:versionName="0.4" package="gg.destiny.app.chat" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application android:hardwareAccelerated="true" android:icon="@drawable/defaulticon" 
        android:label="@string/app_name" 
        android:name="gg.destiny.app.chat.App"
        android:theme="@android:style/Theme.NoTitleBar">
        
        <activity android:name="gg.destiny.app.chat.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="gg.destiny.app.chat.PlayerActivity"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        
        <activity android:name="gg.destiny.app.chat.ChatActivity"
            android:launchMode="singleTop">
        </activity>
    </application>
</manifest>
